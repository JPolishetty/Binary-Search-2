class Solution {
    public int findPeakElement(int[] nums) {
        // if the matrix only have one element, it is max
        if(nums.length == 1){
            return 0;
        }
        int low = 0;
        int high = nums.length - 1;
        while(low <= high){
            int mid = low + (high-low)/2;
            //checking if mid element has 2 lowest numbers on both sides and also checking boundaries 
            if((mid == 0 || nums[mid-1] < nums[mid]) && (mid == nums.length-1 || nums[mid] > nums[mid+1])){
                return mid;
            }
            else if(mid<nums.length-1 && nums[mid+1] >= nums[mid]){
                low = mid + 1;     //checking if mid+1 element is great, then move right towards big element
            }
            else{
                high = mid - 1;    
            }
        }
        return -1;
    }
}
